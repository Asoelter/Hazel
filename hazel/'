#include "event.h"
#include <iostream>

namespace Hazel
{
//---------------------------------------------------Event ---------------------------------------------------
	bool Event::isInCategory(EventCategory category) const
	{
		return (Event::category() & category) > 0;
	}

	inline std::ostream& operator<<(std::ostream& os, const Event& e)
	{
		return os << e.toString() << std::endl;
	}

//----------------------------------------------Event Dispatcher----------------------------------------------
	EventDispatcher::EventDispatcher(Event& e)
		: event_(e)
	{

	}

	template<typename T>
	bool EventDispatcher::dispatch(EventFn<T> f)
	{
		if(event_.category() == T::getStaticType)
		{
			event_.handled_ = f(*(T*)&event_);
			return true;
		}

		return false;
	}
}
